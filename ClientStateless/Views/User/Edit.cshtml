@model EditProfile

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient modal-lg py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Edit Profile</h2>
            </div>
        </div>
    </div>
    <div class="card-body pt-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Username" class="form-control border-0 shadow" value="@Model.Username"/>
                    <label asp-for="Username" class="ms-2"></label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow" readonly value="@Model.Email" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ConfirmOldPassword" class="form-control border-0 shadow" type="password"/>
                    <label asp-for="ConfirmOldPassword" class="ms-2"></label>
                    <span asp-validation-for="ConfirmOldPassword" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="NewPassword" class="form-control border-0 shadow" type="password" />
                    <label asp-for="NewPassword" class="ms-2"></label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ConfirmNewPassword" class="form-control border-0 shadow" type="password" />
                    <label asp-for="ConfirmNewPassword" class="ms-2"></label>
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}