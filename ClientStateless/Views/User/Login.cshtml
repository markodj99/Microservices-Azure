@model Login

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient modal-lg py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Log In</h2>
            </div>
        </div>
    </div>
    <div class="card-body pt-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Password" class="form-control border-0 shadow" type="password"/>
                    <label asp-for="Password" class="ms-2"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Log In
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="User" asp-action="Register" class="btn btn-outline-primary border form-control">
                            Don't have an account? Register here instead
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}